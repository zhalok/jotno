<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colornew"

    tools:context=".MainActivity">


    <TextView

        android:id="@+id/mainlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50sp"
        android:drawableTop="@drawable/book"
        android:text="Jotno"


        android:textAlignment="center"


        android:textSize="30sp"


        />

    <Button
        android:id="@+id/loginbutton"
        android:drawableLeft="@drawable/tutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="  Login as a tutor"
        android:textAllCaps="false"
        style="@style/Widget.AppCompat.Toolbar"

        />

    <Button
        android:id="@+id/look"
        android:drawableLeft="@drawable/search32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textAllCaps="false"
        android:text="  Look for tution"
        style="@style/Widget.AppCompat.Toolbar"
        />

    <Button
        android:id="@+id/profilecreatebutton"
        android:drawableLeft="@drawable/profile32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new profile "
        android:padding="15dp"
        style="@style/Widget.AppCompat.Toolbar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg"
        android:layout_margin="20dp"


        />



</LinearLayout>
